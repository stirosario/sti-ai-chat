<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>

    <!-- ðŸ“„ Documento por defecto -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
        <add value="Default.htm" />
        <add value="Default.asp" />
        <add value="index.htm" />
        <add value="iisstart.htm" />
      </files>
    </defaultDocument>

    <!-- âœ… Evitar que las imÃ¡genes se sirvan con 206 Partial Content -->
    <httpProtocol>
      <customHeaders>
        <add name="Accept-Ranges" value="none" />
        <add name="Cache-Control" value="no-transform, public, max-age=604800" />
      </customHeaders>
    </httpProtocol>

    <!-- âœ… Asegurar que las imÃ¡genes se sirvan con el tipo MIME correcto -->
    <staticContent>
      <remove fileExtension=".jpg" />
      <remove fileExtension=".jpeg" />
      <mimeMap fileExtension=".jpg" mimeType="image/jpeg" />
      <mimeMap fileExtension=".jpeg" mimeType="image/jpeg" />

      <!-- (opcional) PNG y WebP si los usÃ¡s -->
      <remove fileExtension=".png" />
      <mimeMap fileExtension=".png" mimeType="image/png" />
      <remove fileExtension=".webp" />
      <mimeMap fileExtension=".webp" mimeType="image/webp" />
    </staticContent>

  </system.webServer>
</configuration>

