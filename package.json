    "express": "^4.21.2",
    "express-rate-limit": "^6.8.0",
    "helmet": "^7.1.0",
    "openai": "^4.23.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "node-fetch": "^3.3.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stirosario/sti-ai-chat.git"
  },
